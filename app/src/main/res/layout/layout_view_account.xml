<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="mViewModel"
            type="organization.fizzy.marveldroid.view.screens.fragments.ViewAccount"/>
        <variable
            name="mPresenter"
            type="organization.fizzy.marveldroid.view.presenter.fragments.PresenterAccount" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_view_account_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <organization.fizzy.marveldroid.view.screens.ui.CurvesUi
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/btm_nav_account_view"
            app:layout_constraintStart_toStartOf="parent"
            custom:show="true"
            custom:type="CurvesUL"/>
        <organization.fizzy.marveldroid.view.screens.ui.CurvesUi
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/btm_nav_account_view"
            app:layout_constraintEnd_toEndOf="parent"
            custom:show="true"
            custom:type="CurvesBR"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/acts_marvel_top_bkdrp"
            style="@style/MtrlTheme.CardViewRoundedCornersBtmRight"
            android:layout_width="0dp"
            android:layout_height="350dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/colorLightPrimary">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/acts_top_bkdrp_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/gd_top_account_15_hor"
                    app:layout_constraintBottom_toBottomOf="@+id/gd_top_account_15_hor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/app_name"
                    android:textColor="@color/colorGhostWhite"
                    android:textSize="23dp"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gd_top_account_15_hor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.15" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/acts_cnr_bkdrp_content"
            style="@style/MtrlTheme.CardViewRoundedCornersTopLeftRightBtmLeft"
            android:layout_width="0dp"
            android:layout_height="450dp"
            app:layout_constraintVertical_bias="0.50"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/gd_account_15_ver"
            app:layout_constraintEnd_toEndOf="@id/gd_account_85_ver"
            android:backgroundTint="@color/colorLightSecondary">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/account_top_title_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/gd_account_top_35_hor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/baseline_settings_black_18dp"
                    android:backgroundTint="@color/colorLightSecondary"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/account_top_title_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/account_top_title_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Settings"
                    android:textSize="21sp"
                    android:textColor="@color/colorLightSecondary"
                    android:gravity="center"/>
                <com.google.android.material.card.MaterialCardView
                    style="@style/MtrlTheme.CardViewRoundedCornersTopLeftRightBtmLeft"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@+id/gd_account_top_35_hor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/default_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </com.google.android.material.card.MaterialCardView>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gd_account_top_35_hor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.35" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginStart="15dp"
            android:background="@color/colorTouchPink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/gd_account_85_ver"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.75"
            app:layout_constraintVertical_chainStyle="spread">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/account_settings_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/colorTouchPink"
                app:icon="@drawable/baseline_settings_white_18dp"
                app:layout_constraintBottom_toTopOf="@+id/account_bookmarks_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:onClick="@{()->mPresenter.firePresenterSettingsBtn()}"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/account_bookmarks_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/colorTouchPink"
                app:icon="@drawable/baseline_bookmarks_white_18dp"
                app:layout_constraintBottom_toTopOf="@+id/account_logout_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/account_settings_btn"
                android:onClick="@{()->mPresenter.firePresenterBookmarksBtn()}"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/account_logout_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/colorTouchPink"
                app:icon="@drawable/baseline_link_off_white_18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/account_bookmarks_btn"
                android:onClick="@{()->mPresenter.firePresenterLogoutBtn()}"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/btm_nav_account_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:labelVisibilityMode="labeled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_navigation_menu"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_account_15_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_account_75_hor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_account_85_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
