<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="mViewModel"
            type="organization.fizzy.marveldroid.view.screens.fragments.ViewComics"/>
        <variable
            name="mPresenter"
            type="organization.fizzy.marveldroid.view.presenter.fragments.PresenterComic" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_view_comics_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <organization.fizzy.marveldroid.view.screens.ui.CurvesUi
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/btm_nav_comics_view"
            app:layout_constraintStart_toStartOf="parent"
            custom:show="true"
            custom:type="CurvesUL"/>
        <organization.fizzy.marveldroid.view.screens.ui.CurvesUi
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/btm_nav_comics_view"
            app:layout_constraintEnd_toEndOf="parent"
            custom:show="true"
            custom:type="CurvesBR"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/comics_marvel_top_bkdrp"
            style="@style/MtrlTheme.CardViewRoundedCornersBtmLeft"
            android:backgroundTint="@color/colorLightPrimary"
            android:layout_width="0dp"
            android:layout_height="350dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/comics_top_bkdrp_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/gd_top_comics_35_hor"
                    app:layout_constraintBottom_toBottomOf="@+id/gd_top_comics_35_hor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/app_name"
                    android:textColor="@color/colorGhostWhite"
                    android:textSize="23dp"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gd_top_comics_35_hor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.35" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/comics_des"
            android:layout_width="0dp"
            android:layout_height="125dp"
            app:layout_constraintTop_toBottomOf="@+id/comics_marvel_top_bkdrp"
            app:layout_constraintBottom_toBottomOf="@+id/comics_marvel_top_bkdrp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/colorTouchPink"
            android:layout_marginStart="35dp"
            android:elevation="4dp"
            android:onClick="@{()->mPresenter.fireDescriptionListener()}">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/comics_des_price_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$#.##"
                    android:textSize="11sp"
                    android:textColor="@color/colorLightPrimary"
                    android:alpha="0.35"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/comics_des_title_txt"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Description"
                    android:textSize="21sp"
                    android:textColor="@color/colorLightSecondary"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <ScrollView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/comics_des_title_txt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/comics_des_pages_txt"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/comics_des_info_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description Information"
                        android:textSize="13sp"
                        android:textColor="@color/colorLightPrimary" />
                </ScrollView>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/comics_des_issueno_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IssueNo:#"
                    android:textSize="11sp"
                    android:textColor="@color/colorLightPrimary"
                    android:alpha="0.35"
                    app:layout_constraintBottom_toTopOf="@+id/comics_des_pages_txt"
                    app:layout_constraintStart_toEndOf="@+id/gd_comics_des_85_hor"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/comics_des_pages_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="### of Pages"
                    android:textSize="11sp"
                    android:textColor="@color/colorLightPrimary"
                    android:alpha="0.35"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/gd_comics_des_85_hor"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gd_comics_des_85_hor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.85"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/comics_comic_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/comics_des"
            app:layout_constraintBottom_toTopOf="@+id/btm_nav_comics_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/btm_nav_comics_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:labelVisibilityMode="labeled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_navigation_menu"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_comics_85_hor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
