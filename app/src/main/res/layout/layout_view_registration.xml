<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="mViewModel"
            type="organization.fizzy.marveldroid.view.screens.fragments.ViewRegistration"/>
        <variable
            name="mPresenter"
            type="organization.fizzy.marveldroid.view.presenter.fragments.PresenterRegistration" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_view_registration_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <organization.fizzy.marveldroid.view.screens.ui.CurvesUi
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            custom:show="true"
            custom:type="CurvesUL"/>
        <organization.fizzy.marveldroid.view.screens.ui.CurvesUi
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            custom:show="true"
            custom:type="CurvesBR"
            android:translationZ="2dp"/>
        <ImageView
            android:id="@+id/reg_bnr_logo"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:elevation="5dp"
            android:src="@drawable/marvel_logo_hor"
            app:layout_constraintTop_toTopOf="@id/gd_reg_25_hor"
            app:layout_constraintBottom_toBottomOf="@id/gd_reg_25_hor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/reg_bnr_title"
            android:layout_width="0dp"
            android:layout_height="65dp"
            app:layout_constraintTop_toTopOf="@id/gd_reg_25_hor"
            app:layout_constraintBottom_toBottomOf="@id/gd_reg_25_hor"
            app:layout_constraintStart_toStartOf="@+id/gd_reg_65_ver"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/colorGhostWhite"
            android:textSize="15dp"
            android:background="@color/colorLightSecondary"
            android:elevation="4dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/reg_login_btn"
            style="@style/MtrlTheme.LogInFab"
            app:srcCompat="@drawable/baseline_keyboard_arrow_right_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/reg_btm_sheet"
            app:layout_constraintTop_toTopOf="@id/reg_btm_sheet"
            app:layout_constraintStart_toEndOf="@id/gd_reg_75_ver"
            app:layout_constraintEnd_toEndOf="@id/gd_reg_75_ver"
            android:onClick="@{()->mPresenter.firePresenterLoginBtn()}"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/reg_btm_sheet"
            style="@style/MtrlTheme.CardViewRoundedCornersTopLeftRight"
            android:backgroundTint="@color/colorTouchPink"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/gd_reg_60_hor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btm_reg_back_drop_btn"
                    style="@style/MtrlTheme.ActBackDropBtn"
                    app:icon="@drawable/baseline_drag_handle_white_36dp"
                    app:iconTint="@color/colorLightSecondary"
                    app:rippleColor="@color/colorLightSecondaryVariant"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="@id/gd_btm_reg_10_hor"
                    app:layout_constraintBottom_toBottomOf="@+id/gd_btm_reg_10_hor"
                    app:layout_constraintStart_toStartOf="@+id/gd_btm_reg_15_ver"
                    app:layout_constraintEnd_toEndOf="@+id/gd_btm_reg_15_ver"
                    android:onClick="@{()->mPresenter.fireBackDrop()}"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/btm_reg_tiet_username"
                    style="@style/MtrlTheme.TextInputLayout"
                    app:startIconDrawable="@drawable/baseline_account_box_white_18dp"
                    app:startIconTint="@color/colorGhostWhite"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:placeholderText="Username"
                    app:layout_constraintTop_toTopOf="@id/gd_btm_reg_25_hor"
                    app:layout_constraintBottom_toBottomOf="@id/gd_btm_reg_25_hor"
                    app:layout_constraintStart_toStartOf="@id/gd_btm_reg_15_ver"
                    app:layout_constraintEnd_toEndOf="@id/gd_btm_reg_85_ver">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/btm_reg_tiet_username_nested_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="username"
                        android:text="User@2"
                        android:textSize="12sp"
                        android:textColor="@color/colorGhostWhite"
                        android:inputType="text|textNoSuggestions"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/btm_reg_tiet_password"
                    style="@style/MtrlTheme.TextInputLayout"
                    app:startIconDrawable="@drawable/baseline_lock_white_18dp"
                    app:startIconTint="@color/colorGhostWhite"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:placeholderText="Password"
                    app:layout_constraintTop_toBottomOf="@id/btm_reg_tiet_username"
                    app:layout_constraintStart_toStartOf="@id/gd_btm_reg_15_ver"
                    app:layout_constraintEnd_toEndOf="@id/gd_btm_reg_85_ver"
                    android:layout_marginTop="10dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/btm_reg_tiet_password_nested_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="password"
                        android:text="Pass@2"
                        android:textSize="12sp"
                        android:textColor="@color/colorGhostWhite"
                        android:inputType="text|textNoSuggestions"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btm_reg_signup_btn"
                    style="@style/MtrlTheme.ActAddBtn"
                    app:icon="@drawable/baseline_add_box_white_18dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="@id/gd_btm_reg_75_hor"
                    app:layout_constraintStart_toStartOf="parent"
                    android:onClick="@{()->mPresenter.firePresenterSignupBtn()}"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btm_reg_unlock_btn"
                    style="@style/MtrlTheme.ActUnlockBtn"
                    app:icon="@drawable/baseline_lock_open_white_18dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@id/gd_btm_reg_75_hor"
                    app:layout_constraintStart_toStartOf="parent"
                    android:onClick="@{()->mPresenter.firePresenterUnlockBtn()}"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gd_btm_reg_10_hor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.10" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gd_btm_reg_25_hor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.25" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gd_btm_reg_75_hor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.75" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gd_btm_reg_15_ver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.15" />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gd_btm_reg_85_ver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.85" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/gd_reg_65_hor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorLightSecondary">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/terms_of_service_btn"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/gd_bkdrp_reg_03_hor"
                app:layout_constraintStart_toStartOf="@+id/gd_bkdrp_reg_20_ver"
                app:layout_constraintEnd_toEndOf="@+id/gd_bkdrp_reg_80_ver"
                android:text="**Terms &amp; Conditions**"
                android:textSize="12sp"
                app:icon="@drawable/baseline_help_outline_white_18dp"
                android:onClick="@{()->mPresenter.fireTermsOfServiceDialog()}"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gd_bkdrp_reg_03_hor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.03" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gd_bkdrp_reg_20_ver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.20" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gd_bkdrp_reg_80_ver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.80" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_reg_15_hor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_reg_25_hor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_reg_35_hor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_reg_60_hor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.60" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_reg_65_hor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_reg_75_hor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_reg_35_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_reg_65_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.65" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_reg_75_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_reg_85_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
